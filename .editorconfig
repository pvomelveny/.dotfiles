# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

### Golbal Settings
[*]
# Probably Don't Overwrite These
end_of_line = lf
insert_final_newline = true
charset = utf-8
# Probably Set per Language
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

### Clojure
[*.{clj,cljs}]
indent_style = space
indent_size = 2

### CoffeeScript
[*.coffee]
indent_style = space
indent_size = 2

### Haskell
[*.hs]
indent_style = space
indent_size = 2

### JavaScript
[*.js]
indent_style = space
indent_size = 2
# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

### Python
[*.py]
indent_style = space
indent_size = 4

### Makefiles
[Makefile]
indent_style = tab

[*.md]
indent_style = space
